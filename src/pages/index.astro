---
import Layout from '../layouts/Layout.astro'
import Select from '../components/Select.svelte'
const title = 'Accessible Dropdown'
const label = 'Favorite Fruit'
const placeholder = 'Choose a Fruit'
const options = [
  'Apple',
  'Banana',
  'Blueberry',
  'Boysenberry',
  'Cherry',
  'Cranberry',
  'Durian',
  'Eggplant',
  'Fig',
  'Grape',
  'Guava',
  'Huckleberry',
]
---

<Layout {title}>
  <header>
    <h1>{title}</h1>
  </header>
  <main>
    <section aria-labelledby="native-select-heading">
      <h2 id="native-select-heading">Native Select</h2>
      <form>
        <label for="native-select">{label}</label>
        <select id="native-select" name="fruit">
          <option value="" disabled selected>{placeholder}</option>
          {options.map((o, i) => <option value={i}>{o}</option>)}
        </select>
      </form>
    </section>
    <section aria-labelledby="custom-select-heading">
      <h2 id="custom-select-heading">Custom Select</h2>
      <form>
        <Select client:load {label} {placeholder} {options} />
      </form>
    </section>
  </main>
</Layout>
